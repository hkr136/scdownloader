# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here

# SoundCloud API Configuration
# Option 1: Single client ID (backward compatible)
SOUNDCLOUD_CLIENT_ID=your_client_id_here

# Option 2: Multiple client IDs for automatic rotation (recommended)
# Comma-separated list of client IDs
SOUNDCLOUD_CLIENT_IDS=client_id_1,client_id_2,client_id_3

# Client ID Rotation Settings
CLIENT_ID_ROTATION_STRATEGY=failover  # Options: failover, round-robin
CLIENT_ID_COOLDOWN_SECONDS=300        # Cooldown period for failed IDs (in seconds)

# Download Configuration
DOWNLOAD_DIRECTORY=./downloads
MAX_FILE_SIZE_MB=50
TEMP_DIRECTORY=./temp

# Bot Settings
MAX_CONCURRENT_DOWNLOADS=5
DOWNLOAD_TIMEOUT=300

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=bot.log

# Rate Limiting
RATE_LIMIT=60
USER_RATE_LIMIT=10

# Admin Configuration (optional)
ADMIN_USER_IDS=
